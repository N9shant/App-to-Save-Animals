<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:padding="2dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/problemTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Problem Specified"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/problem"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>



            <TextView
                android:id="@+id/UrgencyLevelTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Urgency Level"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/UrgencyLevel"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>



            <TextView
                android:id="@+id/SelectNGOTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Selected NGO"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/SelectNGO"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>



            <TextView
                android:id="@+id/PostTypeTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Post Type"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/Post_Type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>



            <TextView
                android:id="@+id/AnimalCategoryTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Category of animal"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/AnimalCategory"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>



            <TextView
                android:id="@+id/AddressofIncTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Address of this incident"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/AddressofInc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"/>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>